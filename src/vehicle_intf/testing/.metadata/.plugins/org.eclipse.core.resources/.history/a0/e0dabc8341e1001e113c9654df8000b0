//	uss_init();
//	/* Init motors */
//	motors_init();
//
//	ControlFrontLeds(LED_ALL, 10);
//	ControlMotorSpeed(MOTOR_ALL, 25);

	HAL_UART_Receive_IT(&huart1, &rx_data, 1u);
}
